<odoo>
<data>
    <report
        id="purchase_request_report_id"
        model="sprogroup.purchase.request"
        string="Purchase request"
        name="purchase_request_report.purchase_request_template"
        file="purchase_request_report.purchase_request_report_id"
        report_type="qweb-pdf" />

<template id="purchase_request_template">
    <t t-call="web.external_layout">
     <t t-call="web.html_container">
          <t t-set="x" t-value="0" />
          <t t-foreach="docs" t-as="o">
                <t t-set="emp_count" t-value="0"/>
                 <div class="page" dir="rtl">
                    <style type="text/css">
                        .td-y {
                        border: 1px solid #000000;
                        text-align: center;
                        font-family:Droid Arabic Naskh,serif;
                        }
                        .th-x{
                        font-family:Droid Arabic Naskh,serif;
                        <!--background-color: #32CD32 !important;-->
                        border: 1px solid #000000;
                        text-align: center;
                        }
                        .strong-x{
                        border:none;
                        text-align: center;
                        }


                    </style>

                    <br/>
                    <br/>

                     <table dir="ltr" class='table table-bordered' style="float:left; border-color:#000000 " width="100%">
                         <tr>
                            <td colspan="2"><h3>code #</h3></td>
                             <td colspan="2">
                                <span t-field="o.code"/>
                             </td>
                         </tr>
                         <tr>
                             <td style="width=100;text-align: center;">start date</td>
                             <td  style="width=100;text-align: center;"><span t-field="o.date_start"/></td>
                             <td style="width=200;text-align: center;">Approved By</td>
                             <td style="width=200;text-align: center;"><span t-field="o.assigned_to.name"/></td>

                         </tr>
                         <tr>
                            <td style="width=100;text-align: center;">End Date</td>
                            <td  style="width=100;text-align: center;"><span t-field="o.end_start"/></td >
                            <td style="width=200;text-align: center;">Requested By</td>
                            <td  style="width=200;text-align: center;"><span t-field="o.requested_by.name"/></td>
                         </tr>
                     </table>

                    <br/>
                    <br/>
                    <br/>

                    <table class='table table-bordered ' style="border-color:#32CD32 " width="100%">
                        <thead style="border-color:#32CD32">
                            <th style="border-color:#000000;text-align: center;" class="th-x" width="20 %">Request date</th>
                            <th style="border-color:#000000;text-align: center;" class="th-x" width="15 %">Volume</th>
                            <th style="border-color:#000000;text-align: center;" class="th-x" width="15 %">Quantity</th>
                            <th style="border-color:#000000 ;text-align: center;" class="th-x" width="25 %" >Description</th>
                            <th style="border-color:#000000;text-align: center;" class="th-x" width="25 %">Product</th>
                        </thead>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="employee_data">
                                <tr>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                        <span t-field="employee_data.date_required"/>
                                    </td>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                        <span t-field="employee_data.product_uom_id.name"/>
                                    </td>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                        <span t-field="employee_data.product_qty"/>
                                    </td>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                           <span t-field="employee_data.product_id.name"/>
                                    </td>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                        <span t-field="employee_data.product_id"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>

                    </table>
                </div>
         </t>
</t>
    </t>


</template>

</data>
</odoo>