<odoo>
    <data>

        <record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="priority" eval="99"/>
            <field name="groups_id"
               eval="[(4, ref('alloy_limit_create_product.limit_create_customer'))]"/>
            <field name="arch" type="xml">
                <field name='partner_id' position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </field>
            </field>
        </record>

        <record id="invoice_supplier_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="priority" eval="99"/>
            <field name="groups_id"
               eval="[(4, ref('alloy_limit_create_product.limit_create_customer'))]"/>
            <field name="arch" type="xml">
                <field name='partner_id' position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </field>
            </field>
        </record>

        <record id="view_invoice_supplier_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="priority" eval="99"/>
            <field name="groups_id"
               eval="[(4, ref('alloy_limit_create_product.limit_create_product'))]"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='product_id']"
                   position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>

            </field>
        </record>

        <record id="view_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="priority" eval="99"/>
            <field name="groups_id"
               eval="[(4, ref('alloy_limit_create_product.limit_create_product'))]"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='product_id']"
                   position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>

            </field>
        </record>


    </data>
</odoo>